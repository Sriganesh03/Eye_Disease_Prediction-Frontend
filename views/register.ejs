        </div>
        <br>
         <div class="field lname">
            <div class="input-area">
              <input type="text" name="fname" placeholder="Name"  required>
              <i class="icon fas fa-user"></i>
          </div>
         </div>
          <br>
         <div class="field number">
            <div class="input-area">
              <input type="text" name= "phone-num" placeholder="Phone Number"  required>
              <i class="icon fas fa-phone-volume"></i>
          </div>
         </div> 
         <br> 
          <div class="field email">
            <div class="input-area">
              <input type="text" name="email" placeholder="Email Address" required>
              <i class="icon fas fa-envelope"></i>
            </div>
          </div>
          <br>
          <div class="field address">
            <div class="input-area">
              <input type="text" name= "address" placeholder="Address" required>
              <i class="icon fas fa-map-marked-alt"></i>
          </div>
         </div>
         <br>
         <div class="field distrct">
            <div class="input-area">
              <input type="text" name= "district" placeholder="District/Taluk"  required>
              <i class="icon fas fa-map-marked-alt"></i>
          </div>
         </div> 
         <br> 
         <div class="field state">
            <div class="input-area">
              <input type="text" name= "state" placeholder="State" required>
              <i class="icon fas fa-map-marked-alt"></i>
          </div>
         </div> 
         <br>
         <div class="field pincode">
            <div class="input-area">
              <input type="text" name= "pincode" placeholder="Pincode"  required>
              <i class="icon fas fa-map-marked-alt"></i>
          </div>
         </div>
        <br>
          <div class="field password">
            <div class="input-area">
              <input type="password" name="pass" placeholder="Password" required>
              <i class="icon fas fa-lock"></i>
            </div>
          </div>
          <br>
          <div class="field confirm-password">
            <div class="input-area">
              <input type="password" name="conf-pass" placeholder="Confirm-Password" required>
              <i class="icon fas fa-lock"></i>
            </div>
          </div>
          <br>
          <input type="submit" value="Register">
        </form>
        <div class="sign-txt"> Already a member? <a href="/login">SignIn now</a></div>
       
  </div> 
  </div>
